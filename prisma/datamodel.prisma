type Link {
  id: ID! @unique
  description: String!
  url: String!
  postedBy: User
}

type User {
  id: ID! @unique
  first_name: String!
  last_name: String!
  email: String! @unique
  password: String!
  links: [Link!]!
  creations: [Creation!]!
  comments: [Comment!]!
}

type Creation {
  id: ID! @unique
  name: String!
  description: String!
  createdBy: User
}

type Comment {
  id: ID! @unique
  text: String!
  addedBy: User
  # NEED TO ADD CREATION RELATION
}

type Saved_Recipe {
  id: ID! @unique
  user_id: Int!
  recipe_link: String!
}

type Ingredient_Type {
  id: ID! @unique
  name: String!
}

type Ingredient{
  id: ID! @unique
  ingredient_type_id: Int!
  name: String!
}